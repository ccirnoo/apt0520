.loginBox {
  height: 350rpx;
  position: relative;
}
.loginBox .login {
  border: 1px solid red;
  color: red;
  top: 50%;
  transform: translateY(-50%);
}
.loginBox .avatarBG {
  position: relative;
}
.loginBox .avatarBG image {
  width: 100%;
  height: 350rpx;
  filter: blur(30rpx);
}
.loginBox .avatar image {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -60%);
  width: 200rpx;
  border-radius: 50%;
}
.loginBox .nickname {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, 200%);
  color: white;
}
.orderBox {
  display: flex;
  text-align: center;
  margin-top: 40rpx;
}
.orderBox .orderItem {
  flex: 1;
}
.orderBox .orderItem .iconfont {
  font-size: 60rpx;
}
.sysBox {
  margin: 20rpx;
}
.sysBox .sysItem {
  border-bottom: 1px solid rgba(0, 0, 0, 0.3);
  display: flex;
  justify-content: space-between;
}
.sysBox .sysItem .left {
  display: flex;
  align-items: center;
}
.sysBox .sysItem .left .iconfont {
  font-size: 50rpx;
  display: inline-block;
  margin: 30rpx;
}
.sysBox .sysItem .left .text {
  display: inline-block;
}
.sysBox .sysItem .right {
  display: flex;
  align-items: center;
}
.logout {
  background: rgba(255, 0, 0, 0.8);
  margin: 70rpx;
  color: white;
}
